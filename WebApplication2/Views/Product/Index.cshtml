@model IEnumerable<Techcart.Models.Product>
<a href="@Url.Action("Create","Product")" class="btn btn-primary">Add product</a>

<br />

<table class="table table-bordered">
    <thead>
        <tr>

            <th>Product Name</th>
            <th>Product Price</th>
            <th>Product Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Description</td>
                <td>
                    <a href="@Url.Action("Edit","Product",new{id=item.Id})" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete","Product",new{id=item.Id})" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



